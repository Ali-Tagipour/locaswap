<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">

    <ImageView
        android:id="@+id/radar_view"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_radar"
        android:alpha="0.12" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="36sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="24dp" />

            <!-- لوکیشن فعلی -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/current_location"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2" />

                    <TextView
                        android:id="@+id/tv_current"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textColor="#1565C0"
                        android:padding="8dp" />

                    <TextView
                        android:id="@+id/tv_current_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/address_placeholder"
                        android:textColor="#1976D2"
                        android:padding="4dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- لوکیشن هدف -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/target_location"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2" />

                    <TextView
                        android:id="@+id/tv_target"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/target_placeholder"
                        android:textColor="#1565C0"
                        android:padding="8dp" />

                    <TextView
                        android:id="@+id/tv_target_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/address_placeholder"
                        android:textColor="#1976D2"
                        android:padding="4dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- اطلاعات -->
            <com.google.android.material.card.MaterialCardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/info"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2" />

                    <TextView
                        android:id="@+id/tv_accuracy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/accuracy_placeholder"
                        android:textColor="#1565C0" />

                    <TextView
                        android:id="@+id/tv_altitude"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/altitude_placeholder"
                        android:textColor="#1565C0" />

                    <TextView
                        android:id="@+id/tv_speed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/speed_placeholder"
                        android:textColor="#1565C0" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- دکمه‌ها -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/btn_paste"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:text="@string/paste_coords"
                    android:layout_marginEnd="6dp" />

                <Button
                    android:id="@+id/btn_saved"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:text="@string/saved"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_map"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/map"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_language"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:text="@string/language"
                    android:layout_marginEnd="6dp" />

                <Button
                    android:id="@+id/btn_process"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:text="@string/start"
                    android:textSize="18sp"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_menu_more"
        app:tint="#FFFFFF" />

</RelativeLayout>