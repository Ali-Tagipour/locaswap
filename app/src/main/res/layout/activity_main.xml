<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">

    <ImageView
        android:id="@+id/radar_view"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_radar"
        android:alpha="0.12" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="لوکاسوآپ"
                android:textSize="36sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="24dp" />

            <!-- لوکیشن فعلی -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="موقعیت فعلی"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2" />

                    <TextView
                        android:id="@+id/tv_current"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="در حال بارگذاری..."
                        android:textColor="#1565C0"
                        android:padding="8dp" />

                    <TextView
                        android:id="@+id/tv_current_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="آدرس: ---"
                        android:textColor="#1976D2"
                        android:padding="4dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- لوکیشن هدف -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="موقعیت هدف"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2" />

                    <TextView
                        android:id="@+id/tv_target"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="هدف: انتخاب نشده"
                        android:textColor="#1565C0"
                        android:padding="8dp" />

                    <TextView
                        android:id="@+id/tv_target_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="آدرس: ---"
                        android:textColor="#1976D2"
                        android:padding="4dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- اطلاعات سنسور -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="اطلاعات"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2" />

                    <TextView
                        android:id="@+id/tv_accuracy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="دقت: ---"
                        android:textColor="#1565C0" />

                    <TextView
                        android:id="@+id/tv_altitude"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ارتفاع: ---"
                        android:textColor="#1565C0" />

                    <TextView
                        android:id="@+id/tv_speed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="سرعت: ---"
                        android:textColor="#1565C0" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- دکمه‌ها -->
            <Button
                android:id="@+id/btn_save_location"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ذخیره لوکیشن"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btn_map"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="نقشه"
                android:layout_marginBottom="20dp" />

            <Button
                android:id="@+id/btn_start"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="شروع"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_menu_more"
        app:tint="#FFFFFF" />

</RelativeLayout>